<h1> <%= @instrument.name %> </h1> 
<br>
<img src="<%= @instrument.image_url %>">
<br> 
<p> <%= @instrument.description.gsub("/n", ". ") %> </p> 
<br>
<strong> Daily Rate - <%= @instrument.daily_rate %> </strong>

<% if logged_in? && @rental.user_id != current_user.id %>
    <%= button_to 'rent', {:controller => :rentals, :action => 'create'}, :method => :create %>
<% elsif logged_in? && @rental.user_id == current_user.id %>
    <%= button_to 'return', {:controller => :rentals, :action => 'destroy'}, :method => :delete %>
<% end %>