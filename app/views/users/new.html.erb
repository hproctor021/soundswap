<h1>Create an Account (Sign up)</h1>
<br><br>
<%= form_with model: @user, :url => url_for(:controller => 'users', :action => 'create') do | f |%>
<%= f.label :name %>
<%= f.text_field :name %>
<br/><br>
<%= f.label :password %>
<%= f.password_field :password %>
<br/><br>
<%= f.label :password_confirmation %>
<%= f.password_field :password_confirmation %>
<br/><br>
<%= f.submit "Create Account" %>
<% end %>
<br>
<% flash.each do | key, v | %>
<li style='color: red '> <%= v %> </li>
<%end %>
<br>
<%= button_to 'Sign in', sign_in_path, method: :get %>