<h1>Create an Account (Sign up)</h1>

<%= form_with model: @user, :url => url_for(:controller => 'sessions', :action => 'create')do | f |%>
<%= f.label :name %>
<%= f.text_field :name %>
<br/><br>
<%= f.label :password %>
<%= f.text_field :password %>
<br/><br>
<%= f.label :password_confirmation %>
<%= f.text_field :password_confirmation %>
<br/><br>
<%= f.submit "sign in" %>

<% end %>
<% flash.each do | key, v | %>
<li style='color: red '> <%= v %> </li>
<%end %>